{
  "openapi": "3.0.1",
  "info": {
    "title": "Сервис для базы 1C АНИТ",
    "description": "API для получения различных данных\nверсия от 2022-05-17",
    "contact": {
      "email": "ag@79900.ru"
    },
    "version": "1.2.0"
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  },
  "servers": [
    {
      "url": "/copy_erp/hs/oas_api"
    }
  ],
  "security": [
    {
      "basicAuth": []
    }
  ],
  "paths": {
    "/tasks_user": {
      "get": {
        "operationId": "getTaskUser",
        "parameters": [
          {
            "in": "query",
            "name": "guidUser",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "description": "задачи пользователя",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Tasks"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "get": {
        "summary": "Login",
        "description": "При подключении вернёт настройки",
        "operationId": "login",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Config"
                }
              }
            }
          }
        }
      }
    },
    "/catalogs/{type}/{guid}": {
      "get": {
        "description": "Просто возвращает 200. Используется в отладочных и проверочных целях.",
        "operationId": "getCatalogElemByGuid",
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "Тип справочника",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "guid",
            "in": "path",
            "description": "Тип справочника",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Время на сервере",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RefCatalog"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Tasks": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/TaskItem"
        }
      },
      "TaskItem": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "condition": {
            "type": "string",
            "description": "Состояние",
            "enum": [
              "appointed",
              "received",
              "progress",
              "postponed",
              "completed",
              "resumed"
            ]
          },
          "importance": {
            "type": "string",
            "description": "Важность",
            "enum": [
              "base",
              "low",
              "high"
            ]
          },
          "partner": {
            "$ref": "#/components/schemas/RefCatalog"
          },
          "author": {
            "$ref": "#/components/schemas/RefCatalog"
          },
          "responsible": {
            "$ref": "#/components/schemas/RefCatalog"
          },
          "producer": {
            "$ref": "#/components/schemas/RefCatalog"
          },
          "title": {
            "type": "string"
          }
        },
        "description": "Элемент журнала задач"
      },
      "Config": {
        "type": "object",
        "properties": {
          "guidUser": {
            "type": "string",
            "description": "guid пользователя"
          },
          "nameUser": {
            "type": "string",
            "description": "Имя пользователя"
          }
        },
        "description": "Настройки"
      },
      "RefCatalog": {
        "description": "Ссылка на справочник",
        "type": "object",
        "properties": {
          "guid": {
            "type": "string",
            "description": "Уникальный идентификатор"
          },
          "type": {
            "type": "string",
            "description": "Тип справочника"
          },
          "code": {
            "type": "string",
            "description": "Код справочника"
          },
          "name": {
            "type": "string",
            "description": "Наименование справочника"
          }
        }
      }
    },
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}